<!-- This example requires Tailwind CSS v2.0+ -->
<div class="relative bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6">
    <div class="flex justify-between items-center border-b-2 border-gray-100 py-6 md:justify-start md:space-x-10">
      <div class="flex justify-start lg:w-0 lg:flex-1">
       <%=link_to( image_tag( "logo1.png", class: "h-14 w-14  ml-10"), root_path) %>
      </div>
      <div class="-mr-2 -my-2 md:hidden">
        <button type="button" class="mob-btn bg-white rounded-md p-2 inline-flex items-center justify-center text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500" aria-expanded="false">
          <span class="sr-only">Open menu</span>
          <!-- Heroicon name: outline/menu -->
          <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
      <nav class="hidden md:flex space-x-10">
        <div class="relative">
          <!-- Item active: "text-gray-900", Item inactive: "text-gray-500" -->
          <button type="button" class="dropdown-trigger text-gray-500 group bg-white rounded-md inline-flex items-center text-base font-medium 
          hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" aria-expanded="false" id="menu-btn">
            <span>Courses</span>
            <!--
              Heroicon name: solid/chevron-down

              Item active: "text-gray-600", Item inactive: "text-gray-400"
            -->
            <svg class="text-gray-400 ml-2 h-5 w-5 group-hover:text-gray-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </button>

          <!--
            'Solutions' flyout menu, show/hide based on flyout menu state.

            Entering: "transition ease-out duration-200"
              From: "opacity-0 translate-y-1"
              To: "opacity-100 translate-y-0"
            Leaving: "transition ease-in duration-150"
              From: "opacity-100 translate-y-0"
              To: "opacity-0 translate-y-1"
          -->
          <div class="hidden dropdown-content z-10 absolute -ml-4 mt-3 transition ease-out duration-100 transform px-2 w-screen max-w-md sm:px-0 lg:ml-0 lg:left-1/2 lg:-translate-x-1/2" id="dropdown">
            <div class="rounded-lg shadow-lg ring-1 ring-black ring-opacity-5 overflow-hidden">
              <div class="relative grid gap-6 bg-white px-5 py-6 sm:gap-8 sm:p-8">
                <a href="#" class="-m-3 p-3 flex items-start rounded-lg hover:bg-gray-50">
                  <!-- Heroicon name: outline/chart-bar -->
                  
                  <div class="ml-4">
                    <p class="text-base font-medium text-gray-900">
                      Analytics
                    </p>
                    <p class="mt-1 text-sm text-gray-500">
                      Get a better understanding of where your traffic is coming from.
                    </p>
                  </div>
                </a>

                <a href="#" class="-m-3 p-3 flex items-start rounded-lg hover:bg-gray-50">
                  <!-- Heroicon name: outline/cursor-click -->
                 
                  <div class="ml-4">
                    <p class="text-base font-medium text-gray-900">
                      Engagement
                    </p>
                    <p class="mt-1 text-sm text-gray-500">
                      Speak directly to your customers in a more meaningful way.
                    </p>
                  </div>
                </a>
              </div>
              <div class="px-5 py-5 bg-gray-50 space-y-6 sm:flex sm:space-y-0 sm:space-x-10 sm:px-8">
                <div class="flow-root">
                 <%= link_to 'All courses',courses_path,  class: " -m-3 p-3 flex items-center rounded-md text-base font-medium text-gray-900 hover:bg-gray-100" %>
                </div>
              </div>
            </div>
          </div>
        </div>       
          <%= link_to 'Enroll', courses_new_path, class: "font-medium text-gray-500 hover:text-gray-900" %>
          <%= link_to 'Student', users_path, class: "font-medium text-gray-500 hover:text-gray-900" %>
          <%= link_to 'About', about_path, class: "font-medium text-gray-500 hover:text-gray-900" %>
      </nav>
      <div class="hidden md:flex items-center justify-end md:flex-1 lg:w-0">
      <% if (logged_in?) %>
      <%= link_to current_user.name , user_path(current_user), class: "whitespace-nowrap text-base font-medium text-gray-500 hover:text-gray-900 mr-8" %>
         <%= link_to 'Logout',logout_path,  class: "whitespace-nowrap text-base font-medium text-gray-500 hover:text-gray-900 mr-8", method: :delete %>
      <% else %>
         <%= link_to 'Log in',login_path,  class: "whitespace-nowrap text-base font-medium text-gray-500 hover:text-gray-900" %>
         <%= link_to 'Sign up',new_user_path,  class: "ml-8 whitespace-nowrap inline-flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-indigo-600 hover:bg-indigo-700" %>
      <% end %>

      </div>
    </div>
  </div>

  <!--
    Mobile menu, show/hide based on mobile menu state.

    Entering: "duration-200 ease-out"
      From: "opacity-0 scale-95"
      To: "opacity-100 scale-100"
    Leaving: "duration-100 ease-in"
      From: "opacity-100 scale-100"
      To: "opacity-0 scale-95"
  -->
  <div class="mob-menu  z-20 absolute top-0 inset-x-0 p-2 transition transform origin-top-right md:hidden hidden mt-16">
    <div class="rounded-lg shadow-lg ring-1 ring-black ring-opacity-5 bg-white divide-y-2 divide-gray-50">
     
      <div class="py-6 px-5 space-y-6">
        <div class="grid  gap-y-4 gap-x-8">
        <a>
        <button class="block hasSubMenu text-base font-medium text-gray-900 hover:text-gray-700"> Courses
         <svg class=" inline-block text-gray-400 ml-2 h-5 w-5 group-hover:text-gray-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
        </button>
        
        <div class="gap-y-4 gap-x-8 text-sm ml-6 subMenu hidden">
        <% if (logged_in?)%>
          <%= link_to 'Enroll', courses_new_path, class: "text-base font-medium text-gray-900 hover:text-gray-700" %>
           <%= link_to 'Student', root_path, class: "text-base font-medium text-gray-900 hover:text-gray-700" %>
        <% end %>
           <%= link_to 'About', about_path, class: "text-base font-medium text-gray-900 hover:text-gray-700" %>
        </div>
        </a>
          <a href="#" class="text-base font-medium text-gray-900 hover:text-gray-700">
            Courses
          </a>
           <%= link_to 'Enroll', courses_new_path, class: "text-base font-medium text-gray-900 hover:text-gray-700" %>
           <%= link_to 'Student', root_path, class: "text-base font-medium text-gray-900 hover:text-gray-700" %>
           <%= link_to 'About', about_path, class: "text-base font-medium text-gray-900 hover:text-gray-700" %>
       
          
        </div>
        <div>
         <% if (logged_in?) %>
           <%= link_to current_user.name , user_path(current_user), class: "flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-indigo-600 hover:bg-indigo-700 mx-28" %>

           <%= link_to "Logout", logout_path, class: "flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-indigo-600 hover:bg-indigo-700 mx-28", method: :delete %>
         <% else %>
        <%= link_to "Sign up", new_user_path, class: "flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-indigo-600 hover:bg-indigo-700 mx-28" %>
          <p class="mt-6 text-center text-base font-medium text-gray-500">
            Existing account?
            <%= link_to 'Log in',root_path,  class: "text-indigo-600 hover:text-indigo-500" %>
          </p>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
