<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<% flash.each do |key, msg| %>
<div class="bg-white p-8 rounded-xl " id="fad-out">
  <div class="m-auto space-y-6">
    <div class="flex gap-4 bg-green-100 p-4 rounded-md">
        <div class="w-max">
            <div class="h-10 w-10 flex rounded-full bg-gradient-to-b from-green-100 to-green-300 text-green-900">
              <span class="material-icons material-icons-outlined m-auto" style="font-size:20px">done</span>
            </div>
        </div>
        <div class="mt-3 text-sm">
          <h6 class="font-medium text-lime-400"><%= msg %></h6>
        </div>
    </div>
  </div>
</div>
<% end %>